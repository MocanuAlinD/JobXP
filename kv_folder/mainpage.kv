<MainPage>:
    name: 'main_page'
    id: idmainpage
    
    MDFloatLayout:
        adaptive_height: True
        size: root.size
        pos: root.pos
        padding: cm(2)
        spacing: cm(2)
        md_bg_color: 1,1,1,1
        canvas:
            Color:
                # rgba:1,1,1,1
                rgb: app.toolbar_color
            Rectangle:
                size: self.size
                pos: self.pos

        ExitButton:
        MDIconButton:
            icon: 'menu'
            theme_text_color: "Custom"
            text_color: app.white
            pos_hint: {'x': 0.02, 'top': 0.99}
            on_release: app.root.ids.idjobspage.change_screens('settings_page')
        
        MDIconButton:
            id: survey_icon
            icon: 'images/survey1.png'
            text: app.language['mainpage_jobsTitle']
            size_hint: None,None
            width: dp(125)
            height: self.width
            pos_hint: {'center_x':0.5, 'y':0.6}
            on_release:
                app.root.ids.idjobspage.reverse_order('DESC')
                root.manager.current='jobs_page'

        MDIconButton:
            icon: 'images/money.png'
            size_hint: None,None
            width: dp(125)
            height: self.width
            pos_hint: {'center_x':0.5, 'top':0.4}
            on_release: root.manager.current='expenses_page'

        ImageButton:
            id: img_ro
            source: 'images/RO.png'
            size_hint: None, None
            size: dp(35), dp(15)
            pos_hint: {'right':0.48, 'y':0.02}
            on_release: 
                app.change_language_ro()
                app.restart()
        ImageButton:
            id: img_en
            source: 'images/EN.png'
            size_hint: None, None
            size: dp(35), dp(15)
            pos_hint: {'x':0.52, 'y':0.02}
            on_release: 
                app.change_language_en()
                app.restart()
        Label:
            id: text_ro
            text: 'RO'
            font_size: sp(14)
            color: 1,1,1,1
            size_hint:None, None
            size: self.texture_size
            pos: img_ro.x-self.width-dp(5), img_ro.y
        Label:
            id: text_en
            text: 'EN'
            font_size: sp(14)
            color: 1,1,1,1
            size_hint:None, None
            size: self.texture_size
            pos: img_en.right+dp(5), img_ro.y
            
